{
  "name": "react-showdown",
  "version": "2.2.0",
  "description": "Render React components within markdown and markdown as React components!",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/react-showdown.esm.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint --fix",
    "prepare": "tsdx build"
  },
  "author": "Christoph Jerolimov",
  "bugs": {
    "url": "https://github.com/jerolimov/react-showdown/issues"
  },
  "homepage": "https://github.com/jerolimov/react-showdown",
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "markdown",
    "showdown"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-test-renderer": "^17.0.1",
    "@types/showdown": "^1.9.3",
    "husky": "4.3.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "tsdx": "^0.13.0",
    "tslib": "^2.1.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "htmlparser2": "^6.0.0",
    "showdown": "^1.9.1"
  }
}
